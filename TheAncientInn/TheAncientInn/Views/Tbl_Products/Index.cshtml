@model IEnumerable<TheAncientInn.Models.Tbl_Products>

@{
    ViewBag.Title = "Index";
}

<div class="d-flex align-items-center">
    <h2 class="d-inline">Choose Your Pizza!</h2>

    @if (User.IsInRole("Admin"))
    {
        @Html.ActionLink("Add", "Create", new { }, new { @class = "btn btn-outline-dark mx-3" })
    }

    <hr class="text-bg-secondary" />

</div>

<table class="table">
    

@foreach (var item in Model) {
    <tr>

        <td>
            @Html.DisplayFor(modelItem => item.Nome_Product)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description_Product)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Photo1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Photo2)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Photo3)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price_Product)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Quantity_Product)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TimeOfDelivering)
        </td>
        <td>

            @Html.ActionLink("Details", "Details", new { id=item.Id_Product }) |

        </td>
    </tr>
}

</table>
